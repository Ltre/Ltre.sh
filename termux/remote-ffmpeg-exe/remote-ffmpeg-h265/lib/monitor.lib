moniterdb(){
    local moniterFile=''
    while getopts "f:s:" optname; do
        case "$optname" in
            f)
                moniterFile="${OPTARG}"
                ;;
            *)
                echo 'error arg option: -${optname}.'
                return
                ;;
        esac
    done

    local action=''
    case $1 in 
        init)
            ;;
        set)
            ;;
        get)
            ;;
        all)
            ;;
        clear)
            ;;
        *)
            echo "error monitordb action $1"
            return
            ;;
    esac
}

