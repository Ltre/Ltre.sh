
monitor_set(){
    local jqcmd="$1"
    local file="$2"
    local json=$(cat "${file}"|jq "${jqcmd}" -c)
    echo "${json}" > "${file}" # centos下禁止cat和>同时执行，在ubuntu下会导致文件变空。故拆成两句，避免输入输出流冲突
}


monitor_get(){
    local jqcmd="$1"
    local file="$2"
    cat "${file}"|jq "${jqcmd}" -c
}




